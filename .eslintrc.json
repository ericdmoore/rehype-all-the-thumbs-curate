{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "arrow-spacing":["error", { "before": true, "after": true }],
        "indent": [ "error", 4],
        "linebreak-style": ["error","unix"],
        "quotes": ["error", "single"],
        "semi": [ "error","never"]
    }
}
